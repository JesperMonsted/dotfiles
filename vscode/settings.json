{
    "files.autoSave": "onFocusChange",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/obj": true,
        "**/bin": true
    },
    "explorer.sortOrder": "mixed",
