[alias]
  p = push
  pr = pull -r
  pushf = push --force-with-lease
  s = status
  rb = rebase
  rbc = rebase --continue
  rbs = rebase --skip
  rba = rebase --abort
  oops = commit --amend -a --no-edit
  fix-working-tree = !git rm --cached -r . && git reset --hard
  fixauthor = commit --amend --reset-author --no-edit
  remote-cleanup = !git branch -r --merged | grep -v 'development\\|dev\\||devel\\|master' | grep origin | cut -d/ -f2 | xargs -r -n 1 git push origin --delete
  local-cleanup = !git branch --merged | grep -v 'development\\|dev\\||devel\\|master' | grep origin | cut -d/ -f2 | xargs -r -n 1 git branch -d
  fork-cleanup = !git branch -r | grep origin/ | grep -v 'master$' | grep -v HEAD | cut -d/ -f2 | xargs -r -n 1 git push origin --delete
  rerun-ci = !git commit -m \"Rerun CI\" --allow-empty && git push
  work = config user.email \"joseph.petersen@3shape.com\"
  home = config user.email \"josephp90@gmail.com\"
[help]
  autocorrect = 1
[core]
  autocrlf = input
  excludesfile = ~/.gitignore.global
  editor = code --wait
[commit]
  gpgsign = true
[gpg]
	program = gpg
[tag]
	forceSignAnnotated = true
[pull]
  rebase = true
[push]
  default = current
  followTags = true
[fetch]
  prune = true
[branch]
  autosetupmerge = always
  autosetuprebase = always
[remote "origin"]
  fetch = +refs/pr/*/head:refs/remotes/origin/pr/*
[include]
  path = .gitconfig.local
[filter "lfs"]
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
  clean = git-lfs clean -- %f
[url "git@github.com:"]
  insteadOf = https://github.com/
[url "ssh://git@gitlab.com/"]
  insteadOf = https://gitlab.com/
[url "ssh://git@bitbucket.org/"]
  insteadOf = https://bitbucket.org/
[user]
  name = Joseph Petersen
  email = josephp90@gmail.com
[includeIf "gitdir:~/work/"]
  path = .gitconfig.work
[includeIf "gitdir:~/code/"]
  path = .gitconfig.home
[includeIf "gitdir/i:C:/work/"]
  path = .gitconfig.work
[includeIf "gitdir/i:C:/code/"]
  path = .gitconfig.home
